{
    "name": "vhunakoshi/hyperf-ext-sms",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "sms"
    ],
    "description": "The Hyperf SMS package.",
    "authors": [
        {
            "name": "Taufiq Vhunakoshi",
            "email": "vhunakoshi@email.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "HyperfExt\\Sms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\Sms\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-simplexml": "*",
        "ext-swoole": "*",
        "giggsey/libphonenumber-for-php": "^9.0",
        "hyperf-ext/contract": "^2.2",
        "hyperf/async-queue": "^3.1",
        "hyperf/command": "^3.1",
        "hyperf/config": "^3.1",
        "hyperf/devtool": "^3.1",
        "hyperf/di": "^3.1",
        "hyperf/event": "^3.1",
        "hyperf/framework": "^3.1",
        "hyperf/guzzle": "^3.1",
        "hyperf/logger": "^3.1"
    },
    "suggest": {
        "hyperf/validation": "Required to use the validation."
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit --prepend tests/bootstrap.php -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "HyperfExt\\Sms\\ConfigProvider"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "hyperf/testing": "^3.1",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^2.1",
        "swoole/ide-helper": "^6.0"
    }
}
